@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" class="btn btn-primary mt-3">Create New Roles</a>

<div class="mt-2">
    <form method="get" asp-action="Index" class="row ofset-2">
        <div class="col-10"> 
            <input  class="form-control"  placeholder="User's Name" name="Email" required/>
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="search " />
        </div>
    </form>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(e => e.Id)</td>
            <td>@Html.DisplayNameFor(e => e.Name)</td>

            <td>Details</td>
            <td>Edit</td>
            <td>Delete</td>


        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>

                <td>@user.Id</td>
                <td>@user.Name</td>

                <partial name="_ButtonsPartial" model="user.Id"></partial>
            </tr>
        }
    </tbody>
    </table>


